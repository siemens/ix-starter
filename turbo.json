{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CI", "REACT_BASE", "BRAND_URL", "BRAND_VERSION"],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "persistent": true,
      "cache": true
    },
    "lint": {},
    "test": {
      "cache": false,
      "persistent": true
    },
    "e2e": {
      "cache": false,
      "persistent": true
    }
  }
}
